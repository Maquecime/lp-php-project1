{% extends 'base.html.twig' %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('formCss') }}
        {% endblock %}
{% block body %}
    <section id="contact">
        <div class="section-content">
            <h1 class="section-header">Ajoutez<span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> une cat√©gorie</span></h1>
