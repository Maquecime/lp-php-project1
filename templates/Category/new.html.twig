                <form action="" method="post">
                    <div class="row">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="col-md-12 form-line">
                            <div class="form-group">
                                <label>{{ form_label(form.name) }}</label>
                                {{ form_widget(form.name) }}
                            </div>
                            <div class="form-group">
                                <label>{{ form_label(form.color) }}</label>
                                {{ form_widget(form.color) }}
                            </div>
                            <div>
                                {{ form_row(form.save) }}
